{
    "name": "EBSOC Addon",
    "description": "Advanced feature for EBS Online Class System (ebsoc.co.kr)",
    "version": "0.2",
    "permissions": [
        "declarativeContent",
        "*://*.ebsoc.co.kr/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "matches": [
                "https://player.ebsoc.co.kr/*"
            ],
            "run_at": "document_idle",
            "js": [
                "scripts/ebsplayer.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "scripts/*",
        "styles/*"
    ],
    "manifest_version": 2
}